<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <TextView android:id="@+id/projectUserTextViewTitle"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="User Name"
              android:textSize="25sp"
              android:layout_centerHorizontal="true"/>

    <TextView android:id="@+id/nameTextView"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Name:"
              android:textSize="20sp"
              android:layout_below="@id/projectUserTextViewTitle"
              android:layout_alignParentLeft="true"
              android:layout_marginTop="35dp"
              android:layout_marginLeft="10dp"
              android:typeface="normal" />

    <TextView android:id="@+id/userNameTextView"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="User Name"
              android:textSize="15sp"
              android:layout_alignBottom="@id/nameTextView"
              android:layout_alignLeft="@id/projectUserTextViewTitle"
              android:textStyle="normal"
              android:layout_marginLeft="30dp"/>

    <TextView android:id="@+id/emailTextView"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Email:"
              android:textSize="20sp"
              android:layout_below="@id/nameTextView"
              android:layout_alignLeft="@id/nameTextView"
              android:layout_marginTop="40dp"
              android:typeface="normal"/>

    <TextView android:id="@+id/userEmailTextView"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="User Email"
              android:textSize="15sp"
              android:layout_alignBottom="@id/emailTextView"
              android:layout_alignLeft="@id/userNameTextView"/>

    <TextView android:id="@+id/phoneTextView"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Phone:"
              android:textSize="20sp"
              android:layout_below="@id/emailTextView"
              android:layout_alignLeft="@id/emailTextView"
              android:layout_marginTop="40dp"
              android:typeface="normal"/>

    <TextView android:id="@+id/userPhoneTextView"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="User Phone"
              android:textSize="15sp"
              android:layout_alignBottom="@id/phoneTextView"
              android:layout_alignLeft="@id/userEmailTextView"/>

    <TextView android:id="@+id/facebookTextView"
              android:layout_height="wrap_content"
              android:layout_width="wrap_content"
              android:text="Facebook:"
              android:textSize="20sp"
              android:layout_below="@id/phoneTextView"
              android:layout_alignLeft="@id/phoneTextView"
              android:layout_marginTop="40dp"
              android:typeface="normal"/>

    <TextView android:id="@+id/userFacebookTextView"
              android:layout_height="wrap_content"
              android:layout_width="wrap_content"
              android:text="User Facebook"
              android:textSize="15sp"
              android:layout_alignBottom="@id/facebookTextView"
              android:layout_alignLeft="@id/userPhoneTextView"/>

    <TextView android:id="@+id/googleTextView"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Google+:"
              android:textSize="20sp"
              android:layout_below="@id/facebookTextView"
              android:layout_alignLeft="@id/facebookTextView"
              android:layout_marginTop="40dp"
              android:typeface="normal"/>

    <TextView android:id="@+id/userGoogleTextView"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="User Google+"
              android:textSize="15sp"
              android:layout_alignBottom="@id/googleTextView"
              android:layout_alignLeft="@id/userFacebookTextView"/>

    <Button android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnDeleteTeamMember"
            android:text="Delete Team Member"
            android:layout_below="@id/userGoogleTextView"
            android:layout_centerHorizontal="true"
            android:layout_margin="45dp"
            android:clickable="true"
            android:onClick="onButtonClick"/>

</RelativeLayout>