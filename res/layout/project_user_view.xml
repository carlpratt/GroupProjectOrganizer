<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

    <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" >


        <TextView
                android:id="@+id/projectUserTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="User Name"
                android:textSize="30sp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"/>
        <TextView
                android:id="@+id/userNameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name:"
                android:textSize="20sp"
                android:layout_below="@+id/projectUserTextView"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="39dp"
                android:layout_marginLeft="20dp"/>
        <TextView
                android:id="@+id/projectUserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:layout_alignBottom="@+id/userNameTextView"
                android:layout_alignStart="@+id/projectUserTextView"
                android:layout_marginLeft="30dp"
                android:text="User  Name"/>
        <TextView
                android:id="@+id/emailTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email:"
                android:layout_below="@+id/projectUserName"
                android:layout_alignLeft="@+id/userNameTextView"
                android:layout_alignStart="@+id/userNameTextView"
                android:layout_marginTop="36dp"
                android:textSize="20sp"/>
        <TextView
                android:id="@+id/projectUserEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:ems="10"
                android:layout_alignBottom="@+id/emailTextView"
                android:layout_alignLeft="@+id/projectUserName"
                android:layout_alignStart="@+id/projectUserName"
                android:text="User Email"/>
        <TextView
                android:id="@+id/phoneTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phone:"
                android:layout_below="@+id/projectUserEmail"
                android:layout_alignLeft="@+id/emailTextView"
                android:layout_alignStart="@+id/emailTextView"
                android:layout_marginTop="36dp"
                android:textSize="20sp"
                android:textIsSelectable="false"/>
        <TextView
                android:id="@+id/projectUserPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="phone"
                android:ems="10"
                android:layout_alignBottom="@+id/phoneTextView"
                android:layout_alignLeft="@+id/projectUserEmail"
                android:layout_alignStart="@+id/projectUserEmail"
                android:text="User Phone"/>
        <TextView
                android:id="@+id/facebookTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Facebook:"
                android:layout_marginTop="36dp"
                android:textSize="20sp"
                android:layout_below="@+id/projectUserPhone"
                android:layout_alignLeft="@+id/phoneTextView"
                android:layout_alignStart="@+id/phoneTextView"/>
        <TextView
                android:id="@+id/projectUserFacebook"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/facebookTextView"
                android:layout_alignLeft="@+id/projectUserPhone"
                android:layout_alignStart="@+id/projectUserPhone"
                android:layout_alignRight="@+id/projectUserPhone"
                android:layout_alignEnd="@+id/projectUserPhone"
                android:text="User Facebook"/>
        <TextView
                android:id="@+id/googleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Google+"
                android:layout_below="@+id/facebookTextView"
                android:layout_alignLeft="@+id/facebookTextView"
                android:layout_alignStart="@+id/facebookTextView"
                android:layout_marginTop="36dp"
                android:textSize="20sp"/>
        <TextView
                android:id="@+id/projectUserGoogle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/googleTextView"
                android:layout_alignLeft="@+id/projectUserFacebook"
                android:layout_alignStart="@+id/projectUserFacebook"
                android:layout_alignRight="@+id/projectUserFacebook"
                android:layout_alignEnd="@+id/projectUserFacebook"
                android:text="User Google+"/>

    </RelativeLayout>
</ScrollView>
