<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


    <TextView
            android:id="@+id/accept_project_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/project_name_textview"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_margin="15dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/accept_owner"
            android:layout_below="@id/accept_project_title"
            android:textSize="14sp"
            android:layout_centerHorizontal="true"
            android:text="project owner"/>
    <TextView
            android:id="@+id/accept_project_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/accept_owner"
            android:layout_alignParentLeft="true"
            android:text="@string/project_description_edit_text"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:textSize="20sp"
            android:typeface="sans"
            android:layout_margin="10dp"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Join Project"
            android:id="@+id/btnAcceptProject"
            android:layout_below="@id/accept_project_description"
            android:onClick="onButtonClick"
            android:layout_centerHorizontal="true"
            android:layout_margin="15dp"
            android:clickable="true"
            android:typeface="sans"/>

    <Button android:id="@+id/btnDecline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Decline"
            android:onClick="onButtonClick"
            android:clickable="true"
            android:layout_below="@id/btnAcceptProject"
            android:layout_centerHorizontal="true"
            />


</RelativeLayout>