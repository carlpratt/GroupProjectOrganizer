<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" >

    <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" >


        <TextView
                android:id="@+id/editProfileTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="User Profile"
                android:textSize="30sp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"/>
        <TextView
                android:id="@+id/nameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name:"
                android:textSize="20sp"
                android:layout_below="@+id/editProfileTextView"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="39dp"
                android:layout_marginLeft="20dp"/>
        <TextView
                android:id="@+id/displayName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Loading User Name..."
                android:ems="10"
                android:layout_alignBottom="@+id/nameTextView" android:layout_alignLeft="@+id/btnUpdateProfile"
                android:layout_alignStart="@+id/btnUpdateProfile"/>
        <TextView
                android:id="@+id/emailTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email:"
                android:layout_below="@+id/displayName"
                android:layout_alignLeft="@+id/nameTextView"
                android:layout_alignStart="@+id/nameTextView"
                android:layout_marginTop="36dp"
                android:textSize="20sp"/>
        <TextView
                android:id="@+id/displayEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Loading Email..."
                android:ems="10"
                android:layout_alignBottom="@+id/emailTextView"
                android:layout_alignLeft="@+id/displayName"
                android:layout_alignStart="@+id/displayName"/>
        <TextView
                android:id="@+id/phoneTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phone:"
                android:layout_below="@+id/displayEmail"
                android:layout_alignLeft="@+id/emailTextView"
                android:layout_alignStart="@+id/emailTextView"
                android:layout_marginTop="36dp"
                android:textSize="20sp"
                android:textIsSelectable="false"/>
        <TextView
                android:id="@+id/displayPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Loading Phone..."
                android:ems="10"
                android:layout_alignBottom="@+id/phoneTextView"
                android:layout_alignLeft="@+id/displayEmail"
                android:layout_alignStart="@+id/displayEmail"/>
        <TextView
                android:id="@+id/facebookTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Facebook:"
                android:layout_marginTop="36dp"
                android:textSize="20sp"
                android:layout_below="@+id/displayPhone"
                android:layout_alignLeft="@+id/phoneTextView"
                android:layout_alignStart="@+id/phoneTextView"/>
        <TextView
                android:id="@+id/displayFacebook"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Loading Facebook Link..."
                android:layout_alignBottom="@+id/facebookTextView"
                android:layout_alignLeft="@+id/displayPhone"
                android:layout_alignStart="@+id/displayPhone"
                android:layout_alignRight="@+id/displayPhone"
                android:layout_alignEnd="@+id/displayPhone"/>
        <TextView
                android:id="@+id/googleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Google+"
                android:layout_below="@+id/facebookTextView"
                android:layout_alignLeft="@+id/facebookTextView"
                android:layout_alignStart="@+id/facebookTextView"
                android:layout_marginTop="36dp"
                android:textSize="20sp"/>
        <TextView
                android:id="@+id/displayGoogle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Loading Google+ Link..."
                android:layout_alignBottom="@+id/googleTextView"
                android:layout_alignLeft="@+id/displayFacebook"
                android:layout_alignStart="@+id/displayFacebook"
                android:layout_alignRight="@+id/displayFacebook"
                android:layout_alignEnd="@+id/displayFacebook"/>
        <Button
                android:id="@+id/btnUpdateProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="30dp"
                android:layout_below="@id/displayGoogle"
                android:onClick="onButtonClick"
                android:visibility="invisible"/>
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Remove Team Member"
                android:id="@+id/btnDeleteTeamMember"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"/>

    </RelativeLayout>
</ScrollView>