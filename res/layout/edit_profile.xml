<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">



    <TextView
            android:id="@+id/editProfileTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit Profile"
            android:textSize="30sp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"/>
    <TextView
            android:id="@+id/emailTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email:"
            android:textSize="20sp"
            android:layout_below="@+id/editProfileTextView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="39dp"
            android:layout_marginLeft="20dp"/>
    <EditText
            android:id="@+id/emailEditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:layout_alignBottom="@+id/emailTextView"
            android:layout_alignStart="@+id/editProfileTextView"
            android:layout_marginLeft="30dp"/>
    <TextView
            android:id="@+id/nameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name:"
            android:layout_below="@+id/emailEditText"
            android:layout_alignLeft="@+id/emailTextView"
            android:layout_alignStart="@+id/emailTextView"
            android:layout_marginTop="36dp"
            android:textSize="20sp"/>
    <EditText
            android:id="@+id/nameEditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:layout_alignBottom="@+id/nameTextView"
            android:layout_alignLeft="@+id/emailEditText"
            android:layout_alignStart="@+id/emailEditText"/>
    <TextView
            android:id="@+id/phoneTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone:"
            android:layout_below="@+id/nameEditText"
            android:layout_alignLeft="@+id/nameTextView"
            android:layout_alignStart="@+id/nameTextView"
            android:layout_marginTop="36dp"
            android:textSize="20sp"
            android:textIsSelectable="false"/>
    <EditText
            android:id="@+id/phoneEditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:ems="10"
            android:layout_alignBottom="@+id/phoneTextView"
            android:layout_alignLeft="@+id/nameEditText"
            android:layout_alignStart="@+id/nameEditText"/>
    <TextView
            android:id="@+id/facebookTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Facebook:"
            android:layout_marginTop="36dp"
            android:textSize="20sp"
            android:layout_below="@+id/phoneEditText"
            android:layout_alignLeft="@+id/phoneTextView"
            android:layout_alignStart="@+id/phoneTextView"/>
    <EditText
            android:id="@+id/facebookEditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/facebookTextView"
            android:layout_alignLeft="@+id/phoneEditText"
            android:layout_alignStart="@+id/phoneEditText"
            android:layout_alignRight="@+id/phoneEditText"
            android:layout_alignEnd="@+id/phoneEditText"/>
    <TextView
            android:id="@+id/googleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Google+"
            android:layout_below="@+id/facebookTextView"
            android:layout_alignLeft="@+id/facebookTextView"
            android:layout_alignStart="@+id/facebookTextView"
            android:layout_marginTop="36dp"
            android:textSize="20sp"/>
    <EditText
            android:id="@+id/googleEditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/googleTextView"
            android:layout_alignLeft="@+id/facebookEditText"
            android:layout_alignStart="@+id/facebookEditText"
            android:layout_alignRight="@+id/facebookEditText"
            android:layout_alignEnd="@+id/facebookEditText"/>
    <Button
            android:id="@+id/btnUpdateProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Update"
            android:textSize="25sp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="30dp"
            android:onClick="onButtonClick"/>

</RelativeLayout>
